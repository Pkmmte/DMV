<resources>

    <!-- ActionBar Themes -->
    <style name="ActionBarStyle.Transparent" parent="@android:Widget.ActionBar">
        <item name="android:background">@null</item>
        <item name="android:displayOptions">showHome|showTitle</item>
        <item name="android:subtitleTextStyle">@style/ActionBarStyle.SubTitleTextStyle</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.TitleTextStyle</item>
    </style>
    
    <style name="ActionBarStyle.BlueLight" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/holo_blue_light</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:subtitleTextStyle">@style/ActionBarStyle.SubTitleTextStyle</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.TitleTextStyle</item>
        <item name="android:dropDownListViewStyle">@style/ActionBarStyle.DropDownListView</item>
    </style>
    
    <style name="ActionBarStyle.PurpleLight" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/holo_purple_light</item>
        <item name="android:displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="android:subtitleTextStyle">@style/ActionBarStyle.SubTitleTextStyle</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle.TitleTextStyle</item>
        <item name="android:dropDownListViewStyle">@style/ActionBarStyle.DropDownListView</item>
    </style>

    <!-- Generic Stuff -->
    <style name="ActionBarStyle.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
    
    <style name="ActionBarStyle.SubTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
    </style>
	
    <style name="ActionBarStyle.Overflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_overflow</item>
    </style>
    
    <style name="ActionBarStyle.WidgetTheme" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/ActionBarStyle.PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/ActionBarStyle.DropDownListView</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ActionBarStyle.PopupMenu" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/action_popup_background</item>
    </style>
    
    <style name="ActionBarStyle.DropDownListView" parent="android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">@color/ab_menu_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>